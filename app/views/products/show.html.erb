<p>
  <b>Name:</b>
  <%=h @product.name %>
</p>

<p>
  <b>Fullname:</b>
  <%=h @product.fullname %>
</p>

<p>
<b>Publisher:</b>
  <%=h @publisher.name %>
</p>

<p>
  <b>Serial:</b>
  <%=h @product.serial %>
</p>

<p>
  <b>Sku:</b>
  <%=h @product.sku %>
</p>

<p>
  <b>Identifier:</b>
  <%=h @product.identifier %>
</p>
<p>
<b>Versions:</b>
there are <%=h @versions.count %> versions of this product:<br/>
<% count = 0 %>
<% for version in @versions %>
				<% count += 1 %>
					<%=h count %>. 
					<%=h version.fullname %>
					<br/>
	<% end %>
	<br/>
	<%= link_to 'Versions', product_versions_path(@product) %>
</p>

