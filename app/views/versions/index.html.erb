<h1>Listing versions</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Fullname</th>
    <th>Product</th>
    <th>Serial</th>
    <th>Language</th>
  </tr>

<% @versions.each do |version| %>
	  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td><%=h version.name %></td>
    <td><%=h version.fullname %></td>
    <td><%=h version.product_id %></td>
    <td><%=h version.serial %></td>
    <td><%=h version.language %></td>
    <td><%= link_to 'Show', version %></td>
    <td><%= link_to 'Edit', edit_version_path(version) %></td>
    <td><%= link_to 'Destroy', version, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New version', new_version_path %>
