<div class="login-form">
  <% form_tag do %>
	  <fieldset>
		  <legend>Please log in</legend>

			<div>
				<label for="name">Name:</label><br/>
				<%= text_field_tag :name, params[:name] %>
			</div>

			<div>
				<label for="password">Password:</label><br/>
				<%= password_field_tag :password, params[:password] %>
			</div>

			<div>
				<br/>
				<%= submit_tag "Login" %>
			</div>
    </fieldset>
	<% end %>
</div>
