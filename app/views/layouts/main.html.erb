<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
	  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
		<title>SAM &Eacute;clat: <%=h(yield(:title)) || controller.action_name %></title>
    <%= stylesheet_link_tag 'sv3' %>
    <%= javascript_include_tag :defaults  %>
	</head>		

	<body>
	<div id="user_nav">
					<% if current_user %>
									<%= current_user.name %> is logged in as <%= current_user.role %> &nbsp; 
									<%= link_to "Edit Profile", edit_user_path(:current) %> |
					  <%= link_to "Logout", logout_path %> 
					<% else %>
					  <%= link_to "Login", login_path %> 
					<% end %>
	</div>

					<h1>SAM &Eacute;clat Asset CIO</h1>
					<% if current_user %>
 					  <div style="background-color:LightBlue">
					    <p class="navbar">


						<table class="nav"><tr><td class="nav">
						<h2>Client View</h2>
						<table class="nav"><tr><td class="nav">
						<h3>Client Functions</h3>
						&nbsp;
			      <%= link_to 'Dashboard', :controller => 'dashboard' %>
						&nbsp;
						<%= link_to 'Upload', :controller => 'dashboard', :action => 'upload' %>
						&nbsp;
			      <%= link_to 'Licences', :controller => 'licences' %>
						</td></tr></table>

          <% end %>

					<% if current_user && current_user.role == 'admin' %>
				    </td><td class="nav"> 	
						<h2>Adminstration View</h2>
						<table class="nav"><tr><td class="nav">
						<h3>Users</h3>
						&nbsp;
						<%= link_to "New user", new_user_path %>
						&nbsp;
						<%= link_to "Users", :controller => 'users' %>
						&nbsp;
						<%= link_to "Clients", :controller => 'clients' %>
						</td><td class="nav">
						<h3>Hardware</h3>
						&nbsp;
			      <%= link_to 'Locations', :controller => 'locations' %>
						&nbsp;
			      <%= link_to 'Registers', :controller => 'registers' %>
						&nbsp;
			      <%= link_to 'Assets', :controller => 'assets' %>
						&nbsp;
						<%= link_to 'Devices', :controller => 'devices' %>
						&nbsp;
						</td><td class="nav">
						<h3>Software</h3>
						&nbsp;
			      <%= link_to 'Publishers', :controller => 'publishers' %>
						&nbsp;
			      <%= link_to 'Products', :controller => 'products' %>
						&nbsp;
			      <%= link_to 'Versions', :controller => 'versions' %>
						</td><td class="nav">
						<h3>Licencing</h3>
						&nbsp;
			      <%= link_to 'Installations', :controller => 'installations' %>
						&nbsp;
			      <%= link_to 'Licences', :controller => 'licences' %>
						&nbsp;
			      <%= link_to 'Entitlements', :controller => 'entitlements' %>
						&nbsp;
			      <%= link_to 'Compliances', :controller => 'compliances' %>
						</td></tr></table>
					<% end %>
		        </td></tr></table>
						</p>
					</div>
						<% if can? :read, @compliances %>
							<%= link_to 'Compliances', :controller => 'compliances' %>
						<% end %>

	  <p style="color: green"><%= flash[:notice] %></p>
    <div class="content">
						<%= yield  :layout %>
		</div>

	</body>
</html>
