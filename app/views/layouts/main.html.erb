<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<title><%= h(yield(:title)) || controller.action_name %></title>
		<%= stylesheet_link_tag 'sv3' %>
    <%= javascript_include_tag 'jquery','application' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
	</head>		

	<body>
		<div id="banner">
						<% # image_tag("asset_cio_000.png", :size => "140x35", :title => "SAM Eclat Asset CIO TM") %>
						<%= image_tag("AssetCIOLogo.png", :size => "164x60", :title => "SAM Eclat Asset CIO TM") %>
		</div>
	  <div id="container">
      <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
    </div>

		<div id="user_nav">
			<% if current_user %>
				<% if current_user.role == 'admin' %>
								<%= current_user.name %> (<%= current_user.role %> user) is logged in for client #<%= current_user.client_id %>. &nbsp; 
			<% else %>
							<%= current_user.name %> is logged in as <%= current_user.role %>. <%= current_user.client_id %>. &nbsp; 
			<% end %>
			<%= link_to "Edit Profile", edit_user_path(:current) %> |
			<%= link_to "Logout", logout_path %> 
		<% else %>
		<% end %>
		</div>

			<% if !current_user %>
				<div class="view_public">
					<%= link_to 'Home', home_path  %>	|
					<%= link_to 'Login', login_path %>			
				</div>
			<% end %>

			<% if current_user %>
				<div class="view_authorised">
				<p class="navbar">

					<table class="nav"><tr><td class="nav">
						<h2>For Clients</h2>
						<table class="nav"><tr><td class="nav">
						<h3>Functions</h3>
						<ul>
										<li>
						<%= link_to 'Home', :controller => 'home' %>
										</li>
										<li>
						<%= link_to 'Dashboard', :controller => 'home', :action => 'dashboard' %>
										</li>
										<li>
						<%= link_to 'Servers', :controller => 'servers' %>
										</li>
										<li>
						<%= link_to 'Licences', :controller => 'licences' %>
										</li>
						</ul>
						</td></tr></table>

			<% end %>

					<% if current_user && current_user.role == 'admin' %>
						</td><td class="nav"> 	
						<h2>For Administrators</h2>
						<table class="nav"><tr><td class="nav">
						<h3>Users and Role Management</h3>

						<ul>
										<li>
										<%= link_to "Users", :controller => 'users' %>
										</li>
										<li>
										<%= link_to "New User", new_user_path %>
										</li>
										<li>
						<%= link_to "Clients", :controller => 'clients' %>
										</li>
										<li>
						<%= link_to 'Locations', :controller => 'locations' %>
										</li>
						</ul>
						</td><td class="nav">
						<h3>Hardware Management</h3>
						<ul>
										<li>
						<%= link_to 'Registers', :controller => 'registers' %>
										</li>
										<li>
						<%= link_to 'Devices', :controller => 'devices' %>
										</li>
										<li>
						<%= link_to 'Servers', :controller => 'servers' %>
										</li>
						</ul>
						</td><td class="nav">
						<h3>Software Management</h3>
						<ul>
										<li>
						<%= link_to 'Publishers', :controller => 'publishers' %>
										</li>
										<li>
						<%= link_to 'Products', :controller => 'products' %>
										</li>
										<li>
						<%= link_to 'Versions', :controller => 'versions' %>
										</li>
						</ul>
						</td><td class="nav">
						<h3>Licencing Management</h3>
						<ul>
										<li>
						<%= link_to 'Licences', :controller => 'licences' %>
										</li>
										<li>
						<%= link_to 'Entitlements', :controller => 'entitlements' %>
										</li>
						</ul>
						</td><td class="nav">
						<h3>Financial Management</h3>
						<ul>
										<li>
						<%= link_to 'Dashboard', :controller => 'dashboard' %>
										</li>
						</ul>
						</td><td class="nav">
						<h3>Business Alignment</h3>
						<ul>
										<li>
						<%= link_to 'Dashboard', :controller => 'dashboard' %>
										</li>
						</ul>
						</td></tr></table>
					<% end %>
					</td></tr></table>
					</p>
					</div>

		<p class="flash_notice"><%= flash[:notice] %></p>
		<p class="flash_warn"><%= flash[:warning] %></p>
		<p class="flash_error"><%= flash[:error] %></p>
		<div class="content">
						<%= yield  :layout %>
		</div>

	</body>
</html>
