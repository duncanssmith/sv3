<h3>
				Asset CIO for
    <% @clients.each do |client| %>
			<%=h client.name %>
		<% end %>
</h3>

<h1>Asset Registers</h1>

<% if @registers.blank? %>
				<p>There are no registers listed</p>
<% else %>

<table class="index_data">
  <tr>
		<th>Name</th>
		<th>Date</th>
		<th>Frequency</th>
		<th>Type</th>
		<th>Accuracy</th>
		<th><%= image_tag("show.png", :size => '20x20', :title => "Show this record", :alt => "Show")  %></th>
		<th><%= image_tag("edit.png",  :size => '20x20',:title => "Edit this record", :alt => "Edit")  %></th>
		<th><%= image_tag("destroy.png", :size => '20x20', :title => "Destroy this record", :alt => "Destroy")  %></th>
	</tr>

  <% @registers.each do |register| %>
	  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
		  <td><%=h register.name %></td>
			<td><%=h register.date %></td>
			<td><%=h register.frequency %></td>
			<td><%=h register.type %></td>
			<td><%=h register.accuracy %></td>
			<td><%= link_to 'Show', register %></td>
			<td><%= link_to 'Edit', edit_register_path(register) %></td>
			<td><%= link_to 'Destroy', register, :confirm => 'Are you sure?', :method => :delete %></td>
		</tr>
	<% end %>
	</table>

<% end %>

<br />

<%= link_to 'New register', new_register_path %>
