		<h2> 
    <% @clients.each do |client| %>
			<%=h client.name %>
		<% end %>
		</h2>

<%= will_paginate @servers %>

<table>
  <tr class="headline">
		<th>Name </th>
    <th>Alternative name</th>
    <th>Licence type</th>
		<th>Alt reference</th>
		<% @registers.each do |r| %>
						<th> <%=h r.name %> <%=h r.id %></th>
		<% end %>
    <th>Scope</th>
    <th>Comment</th>
  </tr>

	<% @servers.each do |server| %>

	<tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td><%=h server.name %></td>
    <td><%=h server.alternative_name %></td>
    <td><%=h server.licence_type %></td>
		<td><%=h server.alt_reference %></td>

    <% count = 4 %>
    <% i = 0 %>
		<% j = 0 %>
		<% k = 0 %>
		<% a = [] %>
		<% r = 0 %>

		<% while k < count do %>
      <% if (server.registers[k]) %>
			  <% r = r + 1 %>
      <% end %>	
      <% k = k + 1 %>
		<% end %>	

		<% server.registers %>

		<% while i < count do %>
			<% while j < count do %>
        <% if(server.registers[i]) %>
				  <% if((@registers[j]) && (@registers[j].name == server.registers[i].name)) %>
						<!-- print the server register id -->
						<td><%=h i %>:<%=h j %>:<%=h r %>
					  <%=h server.registers[i].id %> 
					  <%=h server.registers[i].name %> 
					  <%=h @registers[j].name %> 
			      </td>
				  <% else %>
					  <td>  </td>
		      <% end %>
				  <% else %>
					  <td>  </td>
				<% end %>
					<% j = j + 1 %>
			<% end %>
        <% j = 0 %>
				<% i = i + 1 %>
		<% end %>


		<td> 
		<% if server.scope == "GREEN" %>
						<%= image_tag("green_traffic_light_1.png", :size => "18x18", :title => "GREEN" ) %>
		<% elsif server.scope == "AMBER" %>
		  <%=	image_tag("amber_traffic_light_1.png", :size => "18x18", :title => "AMBER" ) %>
		<% elsif server.scope == "RED" %>
			<%=	image_tag("red_traffic_light_1.png",  :size => "18x18", :title => "RED" ) %>
		<% else  %>
			<%=	image_tag("grey_traffic_light_1.png") %>
		<% 	end %>

		</td>
		<td><%=h server.comment %></td>

    <td><%= link_to 'Show', server %></td>
    <td><%= link_to 'Edit', edit_server_path(server) %></td>
    <td><%= link_to 'Destroy', server, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @servers %>
