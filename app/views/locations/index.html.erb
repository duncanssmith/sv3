<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Reference</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>Address3</th>
    <th>Address4</th>
    <th>Address5</th>
    <th>Postcode</th>
  </tr>

<% @locations.each do |location| %>
	  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td><%=h location.name %></td>
    <td><%=h location.reference %></td>
    <td><%=h location.address1 %></td>
    <td><%=h location.address2 %></td>
    <td><%=h location.address3 %></td>
    <td><%=h location.address4 %></td>
    <td><%=h location.address5 %></td>
    <td><%=h location.postcode %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

